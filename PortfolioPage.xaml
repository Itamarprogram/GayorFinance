                    <TextBlock Text="{Binding TodayChange}" FontSize="18" FontWeight="Bold" Margin="0,5"/>
                    <TextBlock Text="{Binding TodayChangePercent}" FontWeight="SemiBold"/>
                </StackPanel>
            </Border>

