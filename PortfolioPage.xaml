<Page x:Class="GayorFinance.PortfolioPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
      Title="PortfolioPage">

    <Page.Resources>
        <!-- Style for clickable TextBlock -->
        <Style TargetType="TextBlock" x:Key="ClickableTextBlockStyle">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="Black"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="TextDecorations" Value="Underline"/>
                    <Setter Property="Foreground" Value="Blue"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid Background="#FAFAFA" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0">
            <StackPanel HorizontalAlignment="Center" Margin="0,0,0,20">
                <TextBlock Text="{Binding PortfolioName}" FontSize="24" FontWeight="Bold"/>
                <TextBlock x:Name="TotalValueText" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>
                <TextBlock x:Name="TotalPercentChangeText" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>
            </StackPanel>
            <Button Content="+ Investment" Width="150" Height="40" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,0,20,0" Click="OpenAddInvestmentDialog"/>
        </Grid>

        <lvc:CartesianChart Grid.Row="1" Name="portfolioChart" Margin="10">
            <lvc:CartesianChart.Series>
                <lvc:LineSeries Title="Portfolio Value" Values="{Binding PortfolioValues}" PointGeometrySize="15"/>
            </lvc:CartesianChart.Series>
            <lvc:CartesianChart.AxisX>
                <lvc:Axis Title="Date" Labels="{Binding Dates}" LabelsRotation="45"/>
            </lvc:CartesianChart.AxisX>
            <lvc:CartesianChart.AxisY>
                <lvc:Axis Title="Value" LabelFormatter="{Binding ValueFormatter}"/>
            </lvc:CartesianChart.AxisY>
        </lvc:CartesianChart>   




        <StackPanel Grid.Row="2" Margin="10">
            <TextBlock Text="Investments" FontSize="22" FontWeight="Bold" Margin="0,10,0,10"/>

            <!-- Table Header -->
            <Border Background="#007ACC" Padding="10" CornerRadius="5">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Symbol" FontSize="14" FontWeight="Bold" Foreground="White" Width="80"/>
                    <TextBlock Text="Quantity" FontSize="14" FontWeight="Bold" Foreground="White" Width="60"/>
                    <TextBlock Text="Purchase Price" FontSize="14" FontWeight="Bold" Foreground="White" Width="100"/>
                    <TextBlock Text="Current Price" FontSize="14" FontWeight="Bold" Foreground="White" Width="100"/>
                    <TextBlock Text="Total Value" FontSize="14" FontWeight="Bold" Foreground="White" Width="100"/>
                    <TextBlock Text="Change ($)" FontSize="14" FontWeight="Bold" Foreground="White" Width="80"/>
                    <TextBlock Text="Change (%)" FontSize="14" FontWeight="Bold" Foreground="White" Width="80"/>
                    <TextBlock Text="Purchase Date" FontSize="14" FontWeight="Bold" Foreground="White" Width="120"/>
                </StackPanel>
            </Border>

            <!-- Scrollable Stock List (Fixes UI Overflow) -->
            <ScrollViewer VerticalScrollBarVisibility="Auto" Height="200">
                <ItemsControl x:Name="PortfolioStockListBinding" ItemsSource="{Binding Investments}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="12" Margin="5" CornerRadius="6" 
                            BorderBrush="#D0D0D0" BorderThickness="1" 
                            Background="White"
                            MouseLeftButtonUp="Border_MouseLeftButtonUp"
                            Cursor="Hand">

                                <!-- Hover Effect -->
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#F0F0F0"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>

                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                                    <TextBlock Text="{Binding TickerSymbol}" FontSize="16" FontWeight="Bold" Width="80"/>
                                    <TextBlock Text="{Binding Quantity}" Width="60"/>
                                    <TextBlock Text="{Binding PurchasePrice, StringFormat=C}" Width="100"/>
                                    <TextBlock Text="{Binding CurrentPrice, StringFormat=C}" Width="100"/>
                                    <TextBlock Text="{Binding TotalValue, StringFormat=C}" Width="100"/>
                                    <TextBlock Text="{Binding PriceChange, StringFormat=+0.00;-0.00;0.00}" 
                                       Width="80" Foreground="{Binding PriceChangeColor}"/>
                                    <TextBlock Text="{Binding PercentChange, StringFormat=+0.00\%;-0.00\%;0.00\%}" 
                                       Width="80" Foreground="{Binding PercentChangeColor}"/>
                                    <TextBlock Text="{Binding PurchaseDate, StringFormat=yyyy-MM-dd}" Width="120"/>

                                    <!-- Sell Button -->
                                    <Button Content="Sell" Width="90" Height="35"
                                    Background="Red" Foreground="White" 
                                    FontSize="14" FontWeight="Bold"
                                    Cursor="Hand" BorderThickness="0"
                                    Click="SellStock"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </StackPanel>



        <materialDesign:DialogHost x:Name="AddInvestmentDialogHost">
            <materialDesign:DialogHost.DialogContent>
                <Border CornerRadius="10" Background="{DynamicResource MaterialDesignCardBackground}" Padding="20">
                    <StackPanel Width="400">
                        <TextBlock Text="Add New Investment" FontSize="22" FontWeight="Bold" Margin="0,0,0,20"/>

                        <TextBox x:Name="StockSymbolTextBox"
                         materialDesign:HintAssist.Hint="Stock Symbol"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Margin="0,10,0,10"/>

                        <TextBox x:Name="QuantityTextBox"
                         materialDesign:HintAssist.Hint="Quantity"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Margin="0,10,0,10"/>

                        <DatePicker x:Name="InvestmentDatePicker"
                            materialDesign:HintAssist.Hint="Date"
                            Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                            Margin="0,10,0,10" SelectedDateChanged="InvestmentDatePicker_SelectedDateChanged"/>

                        <TextBox x:Name="PriceTextBox"
                         materialDesign:HintAssist.Hint="Price"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Margin="0,10,0,10"/>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                            <Button Content="Cancel"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Click="CloseAddInvestmentDialog"
                            Margin="5"/>

                            <Button Content="Add"
                            Click="AddInvestment"
                            Background="{DynamicResource PrimaryHueMidBrush}"
                            Foreground="White"
                            Margin="5"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </materialDesign:DialogHost.DialogContent>
        </materialDesign:DialogHost>
    </Grid>
</Page>
