                    <TextBlock Text="{Binding BestPerformerChange}" Foreground="Green" FontWeight="SemiBold"/>
                </StackPanel>
            </Border>

            <Border Style="{StaticResource ModernCard}" Width="200" Height="100" Margin="10">
