<Page x:Class="GayorFinance.PortfolioPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
      xmlns:local="clr-namespace:GayorFinance.Controls"
      Title="PortfolioPage">

    <Grid Background="#FAFAFA" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0">
            <TextBlock Text="My Portfolio" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>
            <Button Content="+ Investment" Width="150" Height="40" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,20,0" Click="OpenAddInvestmentDialog"/>
        </Grid>

        <!-- Graph -->
        <lvc:CartesianChart Grid.Row="1" Name="portfolioChart" Margin="10">
            <lvc:CartesianChart.Series>
                <lvc:LineSeries Title="Portfolio Value" Values="{Binding PortfolioValues}" PointGeometrySize="15"/>
            </lvc:CartesianChart.Series>
            <lvc:CartesianChart.AxisX>
                <lvc:Axis Title="Date" Labels="{Binding Dates}"/>
            </lvc:CartesianChart.AxisX>
            <lvc:CartesianChart.AxisY>
                <lvc:Axis Title="Value" LabelFormatter="{Binding ValueFormatter}"/>
            </lvc:CartesianChart.AxisY>
        </lvc:CartesianChart>

        <!-- General Data -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="10" HorizontalAlignment="Center">
            <StackPanel Margin="20,0,0,0">
                <TextBlock Text="Day Gain" FontWeight="Bold"/>
                <TextBlock Text="{Binding DayGain}"/>
            </StackPanel>
            <StackPanel Margin="20,0,0,0">
                <TextBlock Text="Total Gain" FontWeight="Bold"/>
                <TextBlock Text="{Binding TotalGain}"/>
            </StackPanel>
            <StackPanel Margin="20,0,0,0">
                <TextBlock Text="Invested Amount" FontWeight="Bold"/>
                <TextBlock Text="{Binding InvestedAmount}"/>
            </StackPanel>
            <StackPanel Margin="20,0,0,0">
                <TextBlock Text="ROI" FontWeight="Bold"/>
                <TextBlock Text="{Binding ROI}"/>
            </StackPanel>
        </StackPanel>

        <!-- Investments List -->
        <StackPanel Grid.Row="3" Margin="10">
            <TextBlock Text="Investments" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
            <ItemsControl ItemsSource="{Binding Investments}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <local:InvestmentUserControl />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>

        <!-- Add Investment Dialog -->
        <materialDesign:DialogHost x:Name="AddInvestmentDialogHost" Background="#AAFFFFFF">
            <materialDesign:DialogHost.DialogContent>
                <StackPanel Margin="20">
                    <TextBlock Text="Add New Investment" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>
                    <TextBox x:Name="StockSymbolTextBox" materialDesign:HintAssist.Hint="Stock Symbol" Margin="0,0,0,10"/>
                    <TextBox x:Name="QuantityTextBox" materialDesign:HintAssist.Hint="Quantity" Margin="0,0,0,10"/>
                    <DatePicker x:Name="InvestmentDatePicker" materialDesign:HintAssist.Hint="Date" Margin="0,0,0,10" SelectedDateChanged="InvestmentDatePicker_SelectedDateChanged"/>
                    <TextBox x:Name="PriceTextBox" materialDesign:HintAssist.Hint="Price" Margin="0,0,0,10"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Cancel" Margin="0,10,10,0" Click="CloseAddInvestmentDialog"/>
                        <Button Content="Add" Margin="0,10,0,0" Click="AddInvestment"/>
                    </StackPanel>
                </StackPanel>
            </materialDesign:DialogHost.DialogContent>
        </materialDesign:DialogHost>
    </Grid>
</Page>
