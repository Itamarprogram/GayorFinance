<Page x:Class="GayorFinance.UserPortfolios"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Title="My Portfolios">

    <Grid>
        <!-- Title -->
        <TextBlock Text="My Portfolios" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="10"/>

        <!-- Add Portfolio Button -->
        <Button Content="Add Portfolio" Width="150" Height="50" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,50,0,0" Click="ShowAddPortfolioDialog">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="LightGray"/>
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="FontSize" Value="16"/>
                    <Setter Property="Padding" Value="10,5"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="10">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
        </Button>

        <!-- Portfolio List -->
        <ListView x:Name="PortfolioList" Margin="20,100,20,20">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderThickness="1" BorderBrush="LightGray" CornerRadius="5" Margin="5" Padding="10">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                            <TextBlock Text="{Binding PortfolioName}" FontSize="18" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Content="Access" Width="80" Height="30" Margin="0,0,5,0" Click="AccessPortfolio_Click"/>
                                <Button Content="Delete" Width="80" Height="30" Click="DeletePortfolio_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Add Portfolio Dialog -->
        <materialDesign:DialogHost x:Name="AddPortfolioDialogHost" Background="#AAFFFFFF">
            <materialDesign:DialogHost.DialogContent>
                <StackPanel Margin="20">
                    <TextBlock Text="Add New Portfolio" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>
                    <TextBox x:Name="PortfolioNameTextBox" materialDesign:HintAssist.Hint="Portfolio Name" Margin="0,0,0,10"/>
                    <TextBox x:Name="PortfolioDescriptionTextBox" materialDesign:HintAssist.Hint="Description" Margin="0,0,0,10"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Cancel" Margin="0,10,10,0" Click="CloseAddPortfolioDialog"/>
                        <Button Content="Add" Margin="0,10,0,0" Click="AddPortfolio"/>
                    </StackPanel>
                </StackPanel>
            </materialDesign:DialogHost.DialogContent>
        </materialDesign:DialogHost>
    </Grid>
</Page>
