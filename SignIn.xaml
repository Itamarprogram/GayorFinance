<Page x:Class="GayorFinance.SignIn"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      FontFamily="Segoe UI"
      FontSize="14"
      Title="Sign In">
    <Grid Background="#F0F2F5">
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Border Background="White" VerticalAlignment="Center" CornerRadius="16" Padding="50" Margin="16,32"
                    BorderBrush="#E0E0E0" BorderThickness="1">
                <StackPanel>
                    <!-- Title -->
                    <TextBlock Text="Welcome Back" FontSize="30" FontWeight="Bold" 
                               HorizontalAlignment="Center" Margin="0,0,0,32" Foreground="#333333"/>

                    <!-- Email -->
                    <TextBox x:Name="EmailTextBox" materialDesign:HintAssist.Hint="Email Address" Height="60"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}" Margin="0,8"/>

                    <!-- Password -->
                    <Grid>
                        <PasswordBox x:Name="PasswordBox" materialDesign:HintAssist.Hint="Password" Height="60"
                                     Style="{StaticResource MaterialDesignOutlinedPasswordBox}"/>
                        <TextBox x:Name="VisiblePasswordBox" materialDesign:HintAssist.Hint="Password" Height="60"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 Visibility="Collapsed"/>
                        <Button HorizontalAlignment="Right" Margin="0,0,10,0" 
                                Style="{StaticResource MaterialDesignIconButton}"
                                Click="TogglePasswordVisibility_Click">
                            <materialDesign:PackIcon Kind="Eye"/>
                        </Button>
                    </Grid>

                    <!-- Forgot Password -->
                    <TextBlock Text="Forgot Password?" Foreground="#2E7D32" FontWeight="SemiBold"
                               HorizontalAlignment="Right" Cursor="Hand" Margin="0,8,0,20"/>

                    <!-- Login Button -->
                    <Button x:Name="LoginButton" Content="Login" Height="40" Margin="0,20" 
                            Click="LoginButton_Click"
                            Style="{StaticResource MaterialDesignRaisedButton}">
                        <Button.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#4CAF50" Offset="0"/>
                                <GradientStop Color="#45A045" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>

                    <!-- Sign Up Link -->
                    <TextBlock HorizontalAlignment="Center" FontSize="14" Foreground="#757575">
                        <Run Text="Don't have an account? "/>
                        <Hyperlink Click="GoToSignUpButton_Click" Foreground="#2E7D32" FontWeight="SemiBold">
                            Sign Up
                        </Hyperlink>
                    </TextBlock>
                </StackPanel>
            </Border>
        </ScrollViewer>
    </Grid>
</Page>