<Page x:Class="GayorFinance.LandingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Title="LandingPage">

    <Grid Background="{DynamicResource MaterialDesignPaper}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Navigation Bar -->
        <DockPanel Background="{DynamicResource MaterialDesignPaper}" >
            <TextBlock Text="Gayor Finance" FontSize="24" FontWeight="Bold" Foreground="Black" VerticalAlignment="Center"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Market News" Style="{StaticResource MaterialDesignOutlinedButton}" Click="MarketNewsClick" Margin="5"/>
                <Button Content="Settings" Style="{StaticResource MaterialDesignOutlinedButton}" Click="SettingsClick" Margin="5"/>
            </StackPanel>
        </DockPanel>

        <!-- Search Bar -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <TextBox x:Name="SearchTextBox"
                     materialDesign:HintAssist.Hint="Search Stocks or Portfolios"
                     Width="400"/>
            <Button Content="🔍" Style="{StaticResource MaterialDesignFloatingActionButton}" Click="SearchButton_Click" Margin="10"/>
        </StackPanel>

        <!-- Dashboard Section -->
        <Grid Grid.Row="2" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

 <materialDesign:Card Grid.Column="0" Padding="20" Margin="10" Background="#F0F0F0">
        <StackPanel>
            <TextBlock Text="Market Overview" FontSize="20" FontWeight="Bold" Margin="0,0,0,10" />
            <ScrollViewer MaxHeight="500" VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="MarketOverviewList" MouseDoubleClick="MarketOverviewList_MouseLeftButtonDown">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <materialDesign:Card Padding="15" Margin="0,5,0,5" Background="White" BorderBrush="#E0E0E0" BorderThickness="1">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding Name}" FontSize="16" FontWeight="Bold" />
                                        <TextBlock Text="{Binding Symbol}" FontSize="14" Margin="0,4,0,0" />
                                        <TextBlock Text="{Binding Price, StringFormat=C}" FontSize="14" Margin="0,4,0,0"  />
                                        <TextBlock Text="{Binding ChangesPercentage, StringFormat='Change: {0:P2}'}" FontSize="14" Margin="0,4,0,0" />
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                                        <TextBlock Text="{Binding MarketCap, StringFormat='Market Cap: {0:N0}'}" FontSize="12" />
                                        <TextBlock Text="{Binding Volume, StringFormat='Volume: {0:N0}'}" FontSize="12" Margin="0,4,0,0" />
                                    </StackPanel>
                                </Grid>
                            </materialDesign:Card>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </StackPanel>
    </materialDesign:Card>


            <!-- Portfolio Section with ScrollViewer -->
            <materialDesign:Card Grid.Column="1" Padding="20" Margin="10">
                <StackPanel>
                    <TextBlock Text="My Portfolios" FontSize="18" FontWeight="Bold"/>
                    <TextBlock x:Name="TotalAllPortfoliosValueTxt" Text="Total Value: $21,328.00" FontSize="14" FontWeight="Bold"/>
                    <TextBlock x:Name="TotalAllPortfoliosChangePercentTxt" Text="Total Percent Change: 6.41%" FontSize="14" FontWeight="Bold"/>

                    <Button Content="+ Portfolio" Width="160" Height="45" Style="{StaticResource MaterialDesignRaisedButton}" Click="ShowAddPortfolioDialog" Margin="0,20,0,0"/>

                    <!-- Scrollable Portfolio List -->
                    <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="600">
                        <ItemsControl x:Name="DisplayPortfolios">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <materialDesign:Card Padding="15" Margin="10" Background="White">
                                        <StackPanel>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="Portfolio Name: " FontSize="18" FontWeight="Bold"/>
                                                <TextBlock Text="{Binding PortfolioName}" FontSize="18" FontWeight="Bold"/>
                                            </StackPanel>

                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="Portfolio Description: " FontSize="18" FontWeight="Bold"/>
                                                <TextBlock Text="{Binding Description}" FontSize="18" FontWeight="Bold"/>
                                            </StackPanel>

                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="Total Value: " FontSize="18" FontWeight="Bold"/>
                                                <TextBlock Text="{Binding TotalValue, StringFormat=C}" FontSize="18" FontWeight="Bold" Foreground="{Binding TotalValueColor}"/>
                                            </StackPanel>

                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="Total Percent Change: " FontSize="18" FontWeight="Bold"/>
                                                <TextBlock Text="{Binding TotalPercenTChange, StringFormat=P2}" FontSize="18" FontWeight="Bold" Foreground="{Binding TotalPercentChangeColor}"/>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                                <Button Content="📊 Access" Style="{StaticResource MaterialDesignFlatButton}" Click="AccessPortfolio_Click"/>
                                                <Button Content="❌ Delete" Style="{StaticResource MaterialDesignFlatButton}" Click="DeletePortfolio_Click" Background="Red" Foreground="White"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </materialDesign:Card>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </StackPanel>
            </materialDesign:Card>
        </Grid>

        <materialDesign:DialogHost x:Name="AddPortfolioDialogHost">
            <materialDesign:DialogHost.DialogContent>
                <Border CornerRadius="10" Background="{DynamicResource MaterialDesignCardBackground}" Padding="20">
                    <StackPanel Width="400">
                        <TextBlock Text="Create a New Portfolio" FontSize="22" FontWeight="Bold" Margin="0,0,0,20"/>

                        <!-- Portfolio Name Input -->
                        <TextBox x:Name="PortfolioNameTextBox"
                         materialDesign:HintAssist.Hint="Portfolio Name"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Margin="0,10,0,10"/>

                        <!-- Portfolio Description Input -->
                        <TextBox x:Name="PortfolioDescriptionTextBox"
                         materialDesign:HintAssist.Hint="Portfolio Description"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Margin="0,10,0,10"/>

                        <!-- Buttons -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                            <Button Content="Cancel"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Click="CloseAddPortfolioDialog"
                            Margin="5"/>

                            <Button Content="Add Portfolio"
                            Click="AddPortfolio"
                            Background="{DynamicResource PrimaryHueMidBrush}"
                            Foreground="White"
                            Margin="5"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </materialDesign:DialogHost.DialogContent>
        </materialDesign:DialogHost>

    </Grid>
</Page>
