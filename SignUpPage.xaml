<Page x:Class="GayorFinance.SignUpPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      FontFamily="Segoe UI"
      FontSize="14"
      Title="Sign Up">

    <Grid Background="#FAFAFA">
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Border Background="White" VerticalAlignment="Center" 
                    CornerRadius="12" Padding="40" Margin="16,32"
                    BorderBrush="#EDEDED" BorderThickness="1">
                <StackPanel>
                    <!-- Title -->
                    <TextBlock Text="Create Account" FontSize="28" FontWeight="SemiBold" 
                               HorizontalAlignment="Center" Margin="0,0,0,32" Foreground="#2E2E2E"/>

                    <!-- First Name -->
                    <Grid Margin="0,0,0,20">
                        <TextBox x:Name="FirstNameTextBox" materialDesign:HintAssist.Hint="First Name" Height="48"
                                 Background="#F5F5F5" Padding="10" materialDesign:TextFieldAssist.DecorationVisibility="Hidden"/>
                    </Grid>

                    <!-- Last Name -->
                    <Grid Margin="0,0,0,20">
                        <TextBox x:Name="LastNameTextBox" materialDesign:HintAssist.Hint="Last Name" Height="48"
                                 Background="#F5F5F5" Padding="10" materialDesign:TextFieldAssist.DecorationVisibility="Hidden"/>
                    </Grid>

                    <!-- Email -->
                    <Grid Margin="0,0,0,20">
                        <TextBox x:Name="EmailTextBox" materialDesign:HintAssist.Hint="Email Address" Height="48"
                                 Background="#F5F5F5" Padding="10" materialDesign:TextFieldAssist.DecorationVisibility="Hidden"/>
                    </Grid>

                    <!-- Password -->
                    <Grid Margin="0,0,0,20">
                        <PasswordBox x:Name="PasswordTextBox" materialDesign:HintAssist.Hint="Password" Height="48"
                                     Background="#F5F5F5" Padding="10" materialDesign:TextFieldAssist.DecorationVisibility="Hidden"/>
                    </Grid>

                    <!-- Date of Birth -->
                    <Grid Margin="0,0,0,20">
                        <DatePicker x:Name="DateOfBirthPicker" materialDesign:HintAssist.Hint="Date of Birth" Height="48"
                                    Background="#F5F5F5" Padding="10" materialDesign:TextFieldAssist.DecorationVisibility="Hidden"/>
                    </Grid>

                    <!-- Country -->
                    <Grid Margin="0,0,0,20">
                        <ComboBox x:Name="CountryComboBox"
                                  materialDesign:HintAssist.Hint="Select Country"
                                  ItemsSource="{Binding CountryList}"
                                  DisplayMemberPath="CountryName"
                                  SelectedValuePath="CountryName"
                                  SelectedItem="{Binding SelectedCountry}"
                                  Height="48" Padding="10" materialDesign:TextFieldAssist.DecorationVisibility="Hidden"/>
                    </Grid>

                    <!-- Sign-Up Button -->
                    <Button Content="Sign Up" Height="48" Margin="0,0,0,16" Click="SignUpButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#4CAF50"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontSize" Value="16"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="24">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#45A045"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Go to Sign In -->
                    <Button Content="Already have an account? Sign In" Height="48" Click="GoToSignInButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="#2E7D32"/>
                                <Setter Property="FontSize" Value="14"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Foreground" Value="#1B5E20"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Border>
        </ScrollViewer>
    </Grid>
</Page>
